<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDEBF8"
    tools:context="com.example.android.dubhacks.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/togo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:paddingTop="40dp"
        android:layout_marginBottom="-50dp"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:background="@drawable/select_one"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp">

        <ToggleButton
            android:id="@+id/button_pad"
            android:background="@drawable/selector_pad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff=""
            android:textOn=""
            android:layout_marginRight="12dp"
            android:onClick="pressPadButton"/>

        <ToggleButton
            android:id="@+id/button_condom"
            android:background="@drawable/selector_condom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff=""
            android:textOn=""
            android:layout_marginRight="12dp"
            android:onClick="pressCondomButton"/>

        <ToggleButton
            android:id="@+id/button_bandaid"
            android:background="@drawable/selector_bandaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff=""
            android:textOn=""
            android:layout_marginRight="12dp"
            android:onClick="pressBandAidButton"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/button_submit"
        android:background="@drawable/button"
        android:scaleType="fitXY"
        android:layout_width="190dip"
        android:layout_height="75dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="15dp"
        android:onClick="pressButton"/>

</LinearLayout>
